<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/locationItemIcon"
        android:layout_width="@dimen/googleMapsIconBounds"
        android:layout_height="@dimen/googleMapsIconBounds"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/standard8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard8dp"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/locationItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard8dp"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/locationName"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationItemSubtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard8dp"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/locationSubType" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>