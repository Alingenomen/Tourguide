<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/transportIcon"
        android:layout_width="@dimen/googleMapsIconBounds"
        android:layout_height="@dimen/googleMapsIconBounds"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/standard16dp"
        android:src="@drawable/ic_transport_off" />

    <ImageView
        android:id="@+id/natureIcon"
        android:layout_width="@dimen/googleMapsIconBounds"
        android:layout_height="@dimen/googleMapsIconBounds"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/standard16dp"
        android:layout_marginLeft="@dimen/standard16dp"
        android:layout_toLeftOf="@id/transportIcon"
        android:src="@drawable/ic_nature_off" />

    <ImageView
        android:id="@+id/sportsIcon"
        android:layout_width="@dimen/googleMapsIconBounds"
        android:layout_height="@dimen/googleMapsIconBounds"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/standard16dp"
        android:layout_marginLeft="@dimen/standard16dp"
        android:layout_toLeftOf="@id/natureIcon"
        android:src="@drawable/ic_sports_off" />

    <ImageView
        android:id="@+id/restoIcon"
        android:layout_width="@dimen/googleMapsIconBounds"
        android:layout_height="@dimen/googleMapsIconBounds"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/standard16dp"
        android:layout_marginLeft="@dimen/standard16dp"
        android:layout_toLeftOf="@id/sportsIcon"
        android:src="@drawable/ic_dinner_off" />

</RelativeLayout>